<div class="col-12">
    <div class="row burgerHead">
        <img class="burgerImg" src="/assets/img/burger.png" />
        <h1 class="text-center display-1 title">Eat-Da-Burger</h1>

    </div>
</div>
<div class="col-12 sections">
    <div class="row">
        <div class="col-4">
            <h2 class="text-center">Available Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}

                    <button class="devour-it" data-id="{{id}}" data-newDevour="1">Devour!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <h2 class="addBurgerTitle">Create A Burger!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="burger_name">
                </div>
                <button type="submit">Add Burger</button>
            </form>
        </div>

        <div class="col-4">
            <h2 class="text-center">Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}

                    <button class="digest-it" data-id="{{id}}" data-newDevour="1">Digest!</button>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>